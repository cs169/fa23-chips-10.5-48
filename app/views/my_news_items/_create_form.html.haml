= form_for news_item, url: { action: 'search', controller: 'my_news_items', representative_id: @representative.id, issue: @issue }, method: :post do |f|
    - if news_item.errors.any?
        .alert.alert-danger
            %h2
                "#{pluralize(news_item.errors.count, 'error')} prohibited this news from being saved:"
            %ul
                - news_item.errors.full_messages.each do |message|
                    %li= message
    .form-group.row
        .col-sm-2
            = label :news_item, :representative_id, class: 'col-form-label'
        .col-sm-10
            = select :news_item, :representative_id, representatives_list, { include_blank: true },
            class: 'form-control'
    .form-group.row
        .col-sm-2
            = label :news_item, :issue, class: 'col-form-label'
        .col-sm-10
            = select :news_item, :issue, issue_list, { include_blank: true },
            class: 'form-control'
    = f.hidden_field :representative_id, value: @representative.id
    = f.hidden_field :issue, value: @issue
    .actions
        = f.submit 'Search', class: 'btn btn-primary'
    
